<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_background_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/ovozi_bor_continue"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:scaleType="centerCrop"

                android:src="@drawable/ovozi_yuq_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_numpuz"
                app:tint="@color/white"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:layout_margin="8dp"
                android:src="@drawable/logotip"
                app:layout_constraintEnd_toStartOf="@id/img_numpuz"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/img_numpuz"
                android:layout_width="225dp"
                android:layout_height="129dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menu_background_numpuz"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".1"

                tools:ignore="MissingConstraints" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continue_btn"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="continue"
                android:textColor="@color/black_menu"
                android:textSize="37sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/img_numpuz"
                app:layout_constraintStart_toStartOf="@id/img_numpuz"
                app:layout_constraintTop_toBottomOf="@+id/img_numpuz"
                app:layout_constraintVertical_bias=".05" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/new_game"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="new Game"
                android:textColor="@color/black_menu"
                android:textSize="37sp"
                app:layout_constraintEnd_toEndOf="@id/continue_btn"
                app:layout_constraintStart_toStartOf="@id/continue_btn"

                app:layout_constraintTop_toBottomOf="@id/continue_btn" />

            />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_btn"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="Info"
                android:textColor="@color/black_menu"
                android:textSize="37sp"
                app:layout_constraintEnd_toEndOf="@id/new_game"
                app:layout_constraintStart_toStartOf="@id/new_game"

                app:layout_constraintTop_toBottomOf="@id/new_game" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/exit_btn"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="Exit"
                android:textColor="@color/black_menu"
                android:textSize="37sp"
                app:layout_constraintEnd_toEndOf="@id/info_btn"
                app:layout_constraintStart_toStartOf="@id/info_btn"

                app:layout_constraintTop_toBottomOf="@id/info_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>