<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_background_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="?android:actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:clickable="false"
            android:id="@+id/ovozi_bor_menu"
            android:layout_width="56dp"
            android:layout_height="52dp"
            android:layout_gravity="end"
            android:padding="8dp"
            android:scaleType="centerCrop"

            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:tint="@color/white" />
    <!--<ImageView
        android:id="@+id/ovozi_yuq"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="8dp"
        android:src="@drawable/ovozi_yuq_2"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"

        app:tint="@color/white" />-->

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_gravity="start"


            android:src="@drawable/logotip"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/menu_background_numpuz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ovozi_bor_menu"
            app:layout_constraintWidth_percent=".6" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            tools:ignore="ExtraText">

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/black_menu"
                android:id="@+id/continue_btn_menu"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="CONTINUE"
                android:textAllCaps="true"

                android:textSize="36sp" />

            />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp">

            </Space>


            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/black_menu"
                android:id="@+id/play_btn"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="PLAY"
                android:textSize="36dp" />

            />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp">

            </Space>

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/black_menu"
                android:id="@+id/info_btn_menu"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="INFO"

                android:textSize="36dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>

            <!--
            android:fontFamily="@font/scary_night_regular"
-->


            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/black_menu"
                android:id="@+id/exit_btn_menu"
                android:layout_width="271dp"
                android:layout_height="82dp"
                android:background="@drawable/menu_background_button"
                android:fontFamily="@font/titanone_regular"
                android:text="EXIT"

                android:textSize="36dp" />


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>